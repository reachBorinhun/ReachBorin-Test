{% schema %}
{
  "name": "Hero Gift Guide",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "center_text",
      "label": "Center Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT &rarr;"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "shop_btn_text",
      "label": "Shop Button",
      "default": "SHOP NOW &rarr;"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom Bar Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Hero Gift Guide"
    }
  ]
}
{% endschema %}

<div class="hero-wrapper" style="background-image: url('{{ section.settings.bg_image | image_url }}');">
    
    {% comment %} Top bar {% endcomment %}
  <div class="hero-top-bar">
    <div class="hero-box hamburger" onclick="toggleMenu()">☰</div>

    <div class="hero-box hero-box-logo">
      {{ section.settings.logo_text }}
    </div>

    <div class="hero-box hero-center-text desktop-only">
      {{ section.settings.center_text }}
    </div>
    <button class="hero-top-btn desktop-only">
      {{ section.settings.btn_text }}
    </button>

    <div id="mobile-menu" class="mobile-drawer">
      <div class="hero-box" style="text-align: center; font-size: 15px; font-weight: normal; text-transform: none;">
        {{ section.settings.center_text }}
      </div>
      <button class="hero-top-btn">
        {{ section.settings.btn_text }}
      </button>
    </div>
  </div>

  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.main_heading }}</h1>

    <div class="hero-desc-box">
      <p>{{ section.settings.description }}</p>
    </div>

    <button class="hero-shop-btn">{{ section.settings.shop_btn_text }}</button>
  </div>

  <div class="hero-bottom-bar">
    {{ section.settings.bottom_text }}
  </div>
</div>

<style>
    .hero-wrapper {
    position: relative;
    width: 100%;
    min-height: 100vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-family: sans-serif;
  }

  .hero-top-bar {
    display: flex;
    background-color: #f5f5f5;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding: 15px 30px;
  }

  .hero-box {
    text-transform: uppercase;
    font-size: 30px;
    letter-spacing: 1px;
    color: black;
    font-weight: bold;
    padding: 10px;
  }
  .hero-box.hero-center-text{
    font-size: 14px;
    font-weight: normal;
  }

  .hero-top-btn {
    background-color: #ffeb3b;
    cursor: pointer;
    padding: 15px 35px;
    font-weight: bold;
    text-transform: uppercase;
    border:none;
  }

  .hamburger {
    display: none;
    cursor: pointer;
    font-size: 24px;
    padding: 10px;
  }

  .mobile-drawer {
    display: none;
    transition: 0;
  }

  .hero-content {
    padding: 0 5%;
    max-width: 100%;
    margin-top: 300px;
    margin-bottom: auto;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 900;
    color: black;
    display: inline-block;
    padding: 5px 15px 5px 0;
    margin-bottom: 20px;
    line-height: 1;
    white-space: nowrap;
  }

  .hero-desc-box {
    padding: 20px 20px 20px 0;
    margin-bottom: 20px;
    font-size: 1.1rem;
    line-height: 1.5;
    white-space: normal;
    max-width: 500px;
  }

  .hero-shop-btn {
    background-color: black;
    color: white;
    border: none;
    padding: 15px 40px;
    font-size: 1rem;
    text-transform: uppercase;
    cursor: pointer;
    font-weight: bold;
  }

  /* 4. BOTTOM BAR */
  .hero-bottom-bar {
    background-color: white;
    text-align: center;
    padding: 15px;
    text-transform: uppercase;
    font-size: 12px;
    width: 100%;
    font-weight: bold;
    letter-spacing: 1px;
  }

  @media screen and (max-width: 768px) {
    .hero-top-bar {
      position: relative;
      flex-wrap: wrap;
      padding: 10px;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
    .hero-top-btn{
        margin-top: 10px;
    }
    .desktop-only {
      display: none !important;
    }

    .hamburger {
      display: block;
      order: 1;
    }

    /* Logo Center */
    .hero-box-logo {
      order: 2;
      flex-grow: 1;
      text-align: center;
      padding-right: 40px;
    }

    .mobile-drawer {
      display: none;
      order: 3;
      width: 100%;
      flex-direction: column;
      padding: 10px 0 30px 0;
      background-color: #f5f5f5;
      margin-top: 10px;
      position: absolute;
      top: 75px;
      left: 0;
      align-items: center;
    }

    .mobile-drawer.open {
      display: flex;
    }

    .hero-content {
      text-align: center;
      margin-top: 100px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .hero-title {
      font-size: 2.5rem;
      white-space: normal;
      text-align: center;
    }
  }
</style>

<script>
  function toggleMenu() {
    var menu = document.getElementById('mobile-menu');
    var icon = document.querySelector('.hamburger');

    if (menu.classList.contains('open')) {
      menu.classList.remove('open');
      icon.innerHTML = '☰';
    } else {
      menu.classList.add('open');
      icon.innerHTML = '✕';
    }
  }
</script>
