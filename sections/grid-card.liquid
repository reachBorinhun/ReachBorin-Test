{% schema %}
{
  "name": "Tisso grid card",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "For heading"
    }
  ],
  "blocks": [
    {
      "type": "lookbook_image",
      "name": "Lookbook Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Main image"
        },
        {
          "type": "range",
          "id": "btn_y",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Up & Down",
          "default": 50
        },
        {
          "type": "range",
          "id": "btn_x",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Left & Right",
          "default": 50
        },
        {
          "type": "product",
          "id": "product_ref",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tisso grid card",
      "blocks": [
        {
          "type": "lookbook_image"
        },
        {
          "type": "lookbook_image"
        },
        {
          "type": "lookbook_image"
        }
      ]
    }
  ]
}
{% endschema %}

{% comment %} Bloock code {% endcomment %}

<div class="wild-section">
  <h2 class="wild-heading">
    {{ section.settings.heading }}
  </h2>

  <div class="wild-grid">
    {% for block in section.blocks %}
      <div class="wild-card" {{ block.shopify_attributes }}>
        {% if block.settings.image %}
          {{ block.settings.image | image_url: width: 600 | image_tag: class: 'wild-img', loading: 'lazy' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'wild-img' }}
        {% endif %}

        <button
          class="plus-btn"
          onclick="toggleModal('modal-{{ block.id }}')"
          style="top: {{block.settings.btn_y}}%; left: {{block.settings.btn_x}}%;"
        >
          <svg class="plus-icon" viewBox="0 0 14 14">
            <path d="M14 8H8V14H6V8H0V6H6V0H8V6H14V8Z" />
          </svg>
        </button>

        {% comment %} For modal {% endcomment %}
        <div id="modal-{{ block.id }}" class="modal-overlay">
          <div class="modal-card">
            <span class="close-icon" onclick="toggleModal('modal-{{ block.id }}')">&times;</span>

            {% assign product = block.settings.product_ref %}
            {% if product != blank %}
              <div class="card-header">
                <div class="header-img-container">
                  {{ product.featured_image | image_url: width: 400 | image_tag: class: 'header-img' }}
                </div>
                <div class="header-info">
                  <h2 class="product-title">{{ product.title }}</h2>
                  <p class="product-price">{{ product.price | money }}</p>
                  <div class="product-desc">
                    {{ product.description | strip_html | truncatewords: 16 }}
                  </div>
                </div>
              </div>
              {% form 'product', product %}
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

                {% assign color_option = product.options_with_values | where: 'name', 'Color' | first %}
                {% if color_option %}
                  <div class="form-group">
                    <label class="form-label">Color</label>
                    <div class="custom-border-box flex-row" id="color-group-{{ block.id }}">
                      {% comment %} Logic for detect white color {% endcomment %}

                      {% for value in color_option.values %}
                        {% assign is_white = false %}
                        {% if value == 'White' or value == 'White' %}
                          {% assign is_white = true %}
                        {% endif %}

                        <div
                          class="option-btn {% if forloop.first %}active{% endif %} {% if is_white %}is_white{% endif %}"
                          onclick="selectColor(this)"
                          {% unless is_white %}
                            style="border-left: 5px solid {{ value }};"
                          {% endunless %}
                        >
                          {{ value }}
                        </div>
                      {% endfor %}
                    </div>
                    <input
                      type="hidden"
                      name="options[Color]"
                      class="hidden-color-input"
                      value="{{ color_option.selected_value }}"
                    >
                  </div>
                {% endif %}

                {% assign size_option = product.options_with_values | where: 'name', 'Size' | first %}
                {% if size_option %}
                  <div class="form-group">
                    <label class="form-label">Size</label>
                    <div class="custom-dropdown" id="dropdown-{{ block.id }}">
                      <div class="dropdown-trigger" onclick="toggleDropdown('dropdown-{{ block.id }}')">
                        <span class="selected-text">Choose your size</span>
                        <div class="trigger-icon-box">
                          <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                          >
                            <path d="M6 9L12 15L18 9" stroke-linecap="square" stroke-linejoin="round"/>
                          </svg>
                        </div>
                      </div>

                      <div class="dropdown-options">
                        {% for value in size_option.values %}
                          <div class="dropdown-item" onclick="selectSize('dropdown-{{ block.id }}', '{{ value }}')">
                            {{ value }}
                          </div>
                        {% endfor %}
                      </div>

                      <select name="options[Size]" class="hidden-real-select" style="display:none;">
                        {% for value in size_option.values %}
                          <option value="{{ value }}">{{ value }}</option>
                        {% endfor %}
                      </select>
                    </div>
                  </div>
                {% endif %}

                <button class="atc-btn" type="submit">
                  <span class="btn-text">ADD TO CART</span>
                  <svg width="27" height="12" viewBox="0 0 27 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0.75 4.77298C0.335786 4.77298 -3.62117e-08 5.10877 0 5.52298C3.62117e-08 5.93719 0.335786 6.27298 0.75 6.27298L0.75 4.77298ZM26.2803 6.05331C26.5732 5.76041 26.5732 5.28554 26.2803 4.99265L21.5074 0.219677C21.2145 -0.0732163 20.7396 -0.0732163 20.4467 0.219677C20.1538 0.512571 20.1538 0.987444 20.4467 1.28034L24.6893 5.52298L20.4467 9.76562C20.1538 10.0585 20.1538 10.5334 20.4467 10.8263C20.7396 11.1192 21.2145 11.1192 21.5074 10.8263L26.2803 6.05331ZM0.75 6.27298L25.75 6.27298L25.75 4.77298L0.75 4.77298L0.75 6.27298Z" fill="#ffff"/>
                  </svg>
                </button>
              {% endform %}
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

