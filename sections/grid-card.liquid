<style>
  .wild-section {
    max-width: 1337px;
    padding: 60px 20px;
    margin: 0 auto;
  }
  .wild-heading {
    font-size: 36px;
    font-weight: 400;
    margin-bottom: 30px;
    color: black;
    font-family: Lustria, serif;
  }

  /* Grid System */
  .wild-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  /* for card*/
  .wild-card {
    position: relative;
    width: 100%;
    background-color: rgb(216, 216, 216);
    overflow: hidden;
    aspect-ratio: 1/1;
  }
  .wild-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* For plus button */
  .plus-btn {
    position: absolute;
    width: 22px;
    height: 22px;
    border-radius: 100%;
    background-color: #f8f8f8e5;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  .plus-icon {
    width: 8.46px;
    height: 8.46px;
    fill: black;
  }
  /* For modal product */
  .modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 999;
    justify-content: center;
    align-items: center;
  }
  .modal-overlay.active {
    display: flex;
  }
  .modal-card {
    background-color: white;
    padding: 26px;
    width: 100%;
    max-width: 400px;
    height: 630px;
    position: relative;
    box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    font-family: Jost, sans-serif;
    box-sizing: border-box;
  }
  .close-icon {
    position: absolute;
    top: 10px;
    left: 88%;
    font-size: 28px;
    cursor: pointer;
  }
  /* For card */
  .card-header {
    display: flex;
    gap: 12px;
    margin-bottom: 26px;
    padding-top: 32px;
  }
  .header-img-container {
    width: 45%;
    aspect-ratio: 1/1;
    overflow: hidden;
  }
  .header-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .header-info {
    width: 55%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 16px;
  }
  .product-title {
    font-family: Jost, sans-serif;
    font-size: 24px;
    font-weight: 300;
    margin: 0;
  }
  .product-price {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 12px;
    font-family: Lustria, sans-serif;
  }
  .product-desc {
    font-size: 14px;
    line-height: 1.5;
    font-family: Jost, serif;
  }
  /* For card footer */
  .form-group {
    margin-bottom: 14px;
  }
  .form-label {
    width: 100%;
    display: block;
    font-size: 14px;
    font-weight: 400;
    margin-bottom: 8px;
    color: #333333;
  }
  .custom-border-box {
    width: 100%;
    display: flex;
    border: 1px solid black;
  }
  .option-btn {
    flex: 1;
    padding: 12px;
    font-size: 18px;
    font-weight: 400;
    cursor: pointer;
    border-left: 5px solid black;
    background: white;
    transition: all 0.2s;
    position: relative;
  }
  .option-btn.is_white::before {
    content: '';
    position: absolute;
    left: -5px;
    top: 0;
    bottom: 0;
    width: 5px;
    background-color: white;
    border-left: 1px solid black;
    border-right: 1px solid black;
    z-index: 999;
  }
  .option-btn.active {
    font-weight: 500;
    background-color: black;
    color: white;
  }
  /* For Dropdown */
  .custom-dropdown {
    position: relative;
    width: 100%;
    border: 1px solid black;
    background: white;
    cursor: pointer;
    font-size: 14px;
    font-weight: 300;
  }
  .dropdown-trigger {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 48px;
    background-color: white;
    transition: background 0.2s;
    padding-left: 10px;
  }
  .trigger-icon-box {
    width: 48px;
    height: 100%;
    border-left: 1px solid black;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
  }
  .custom-dropdown.is-open .dropdown-trigger {
    background: #f4f4f5;
  }
  .dropdown-options {
    display: none;
    position: absolute;
    top: 100%;
    left: -1px;
    right: -1px;
    background: white;
    border: 1px solid black;
    z-index: 100;
    max-height: 200px;
    overflow-y: auto;
  }
  .selected-text {
    font-size: 16px;
    font-weight: 400;
    flex-grow: 1;
    text-align: left;
    padding: 15px;
  }
  .custom-dropdown.is-open .dropdown-options {
    display: block;
  }
  .dropdown-item {
    padding: 12px;
    text-align: center;
    cursor: pointer;
  }
  .dropdown-item:hover {
    background: #f4f4f5;
    font-weight: 500;
  }
  .atc-btn {
    background-color: rgb(20, 20, 20);
    color: white;
    width: 100%;
    padding: 20px;
    margin-top: 62px;
    border: none;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  .atc-btn svg {
    position: absolute;
    right: 20px;
  }
  .btn-text{
    font-weight: 400;
    font-size: 16px;
  }
  /* Responsive */
  @media screen and (max-width: 768px) {
    .wild-heading {
      text-align: center;
      font-size: 32px;
    }
    .wild-grid {
      gap: 4px;
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

{% comment %} Functionf for modal {% endcomment %}
<script>
  function toggleModal(modalId) {
    var modal = document.getElementById(modalId);
    if (modal) {
      modal.classList.toggle('active');
      console.log('working on dialog');
    }
  }
  function selectColor(btn) {
    var group = btn.parentElement;
    var buttons = group.getElementsByClassName('option-btn');
    for (var i = 0; i < buttons.length; i++) {
      buttons[i].classList.remove('active');
    }
    btn.classList.add('active');

    var container = group.parentElement;
    var input = container.querySelector('.hidden-color-input');
    if (input) input.value = btn.innerText.trim();
  }
  // For drop down
  function toggleDropdown(dropdownId) {
    var dropdown = document.getElementById(dropdownId);
    if (dropdown) dropdown.classList.toggle('is-open');
  }
  // For size select
  function selectSize(dropdownId, value) {
    var dropdown = document.getElementById(dropdownId);

    var textElement = dropdown.querySelector('.selected-text');
    if (textElement) {
      textElement.textContent = value;
      textElement.style.textAlign = 'center';
    }

    var hiddenSelect = dropdown.querySelector('.hidden-real-select');
    if (hiddenSelect) hiddenSelect.value = value;

    dropdown.classList.remove('is-open');
  }
  document.addEventListener('click', function (e) {
    if (!e.target.closest('.custom-dropdown') && !e.target.closest('.plus-icon')) {
      document.querySelectorAll('.custom-dropdown.is-open').forEach((d) => d.classList.remove('is-open'));
    }
  });
</script>

